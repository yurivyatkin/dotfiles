[user]
  name = Yuri Vyatkin
  email = yuri.vyatkin@users.noreply.github.com
  username = yurivyatkin
[core]
  editor = vim
  whitespace = off
  excludesfile = ~/.gitignore_global
[color]
  ui = true
[push]
  default = current
[alias]
  bak = !git branch `git br | grep '*' | sed -e 's/* /BAK_/'`
  br = branch
  ci = commit
  co = checkout
  st = status
  ignore = update-index --assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  unignore = update-index --no-assume-unchanged
	quick-stats = ! /usr/local/bin/git-quick-stats
[init]
	templatedir = /home/yuri/.git-templates
